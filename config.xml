<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.trackssoftware.visitorapp"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Visitor App Demo</name>

    <description>
        A Tracks visitor experience demonstration app. 
    </description>

    <author href="https://trackssoftware.com" email="support@trackssoftware.com">
        Tony Niemann
    </author>
    
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
                          
    <!-- iPhone / iPod Touch  -->
    <icon src="images/logo-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="images/logo-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="images/logo-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="images/logo-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="images/logo-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="images/logo-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="images/logo-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="images/logo-40@2x.png" gap:platform="ios" width="80" height="80" />
    
    
    <!-- iPhone and iPod touch -->
    <gap:splash src="images/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="images/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="images/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="images/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="images/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="images/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="images/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />
    
    
    <gap:plugin name="com.unarin.cordova.beacon" version="3.0.0" />
    <gap:plugin name="org.apache.cordova.core.dialogs" />
    <gap:plugin name="org.apache.cordova.core.vibration" />
    
    <gap:platform name="ios" />
    
    <feature name="Notification">
        <param name="ios-package" value="CDVNotification" />
    </feature>
    
</widget>